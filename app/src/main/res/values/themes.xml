<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiccionarioCamba" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (Green). -->
        <item name="colorPrimary">#2fb241</item>
        <item name="colorPrimaryVariant">#24963b</item> <!-- Darker variant of green -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (Gray). -->
        <item name="colorSecondary">#b0bec5</item> <!-- Light Gray -->
        <item name="colorSecondaryVariant">#78909c</item> <!-- Darker Gray -->
        <item name="colorOnSecondary">@color/black</item>

        <!-- Ternary color (White and contrast with secondary). -->
        <item name="colorTertiary">#f5f5f5</item> <!-- Off White -->
        <item name="colorOnTertiary">#616161</item> <!-- Medium Gray -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Custom corner on dialog -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
</resources>