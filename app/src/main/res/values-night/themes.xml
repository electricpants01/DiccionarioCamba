<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiccionarioCamba" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (Dark Green). -->
        <item name="colorPrimary">#1a7730</item> <!-- Darker Green for Dark Mode -->
        <item name="colorPrimaryVariant">#145f26</item> <!-- Even Darker variant of green -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (Dark Gray). -->
        <item name="colorSecondary">#455a64</item> <!-- Dark Gray -->
        <item name="colorSecondaryVariant">#1c313a</item> <!-- Darker Gray -->
        <item name="colorOnSecondary">@color/white</item>

        <!-- Ternary color (Dark background and contrasting text). -->
        <item name="colorTertiary">#303030</item> <!-- Dark background color -->
        <item name="colorOnTertiary">#e0e0e0</item> <!-- Light Gray text for contrast -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Custom corner on dialog -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
</resources>
